@model  PagedList.IPagedList<HomeAssigment.Models.Items>
@using PagedList.Mvc;
@using PagedList;



@{
    ViewBag.Title = "items";
}


<style>
    .ul.pagination {
        display: inline-block;
        padding: 0;
        margin: 0;
    }

    ul.pagination li {
        display: inline;
    }

        ul.pagination li a {
            color: black;
            float: left;
            padding: 8px 16px;
            text-decoration: none;
            transition: background-color .3s;
        }

            ul.pagination li a.active {
                background-color: #4CAF50;
                color: white;
            }

            ul.pagination li a:hover:not(.active) {
                background-color: #ddd;
            }
</style>





<div class="card-body">
    @{
        Html.RenderPartial("PartialCard");
    }
</div>


@Html.PagedListPager(Model, page => Url.Action("PartialPageNewFirst", new { page }))