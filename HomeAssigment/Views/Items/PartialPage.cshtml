@model  PagedList.IPagedList<HomeAssigment.Models.Items>
@using PagedList.Mvc;
@using PagedList;



@{
    ViewBag.Title = "items";
}


<style>
    .ul.pagination {
        display: inline-block;
        padding: 0;
        margin: 0;
    }

    ul.pagination li {
        display: inline;
    }

        ul.pagination li a {
            color: black;
            float: left;
            padding: 8px 16px;
            text-decoration: none;
            transition: background-color .3s;
        }

            ul.pagination li a.active {
                background-color: #4CAF50;
                color: white;
            }

            ul.pagination li a:hover:not(.active) {
                background-color: #ddd;
            }
</style>




@foreach (var item in Model)
{

    <br>
    <br>
    <div class="card">

        <div class="card-body">
            <img src="@Html.DisplayFor(modelItem => item.itemName.ImagePath)" width="500" height="250" />
            <h5 class="card-title">@Html.DisplayFor(modelItem => item.itemName.ItemName)</h5>
            <p class="card-text"> Price: €@Html.DisplayFor(modelItem => item.ItemPrice)</p>
            <p class="card-text">date created :    @Html.DisplayFor(modelItem => item.ItemDate)</p>

            <a href="#" class="btn btn-primary">Go somewhere</a>

            @Html.ActionLink("Edit", "Edit", new { id = item.Id })
            @Html.ActionLink("Details", "Details", new { id = item.Id }) |
            @Html.ActionLink("Delete", "Delete", new { id = item.Id })

        </div>
    </div>

    <br>
    <br>

}


@Html.PagedListPager(Model, page => Url.Action("PartialPage", new { page }))