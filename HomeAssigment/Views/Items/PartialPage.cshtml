@model IEnumerable<HomeAssigment.Models.Items>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>


<table class="table">


    @foreach (var item in Model)
    {


        <div class="card">
            <div class="card-header">
                Featured
            </div>
            <div class="card-body">
                <h5 class="card-title">@Html.DisplayFor(modelItem => item.itemName.ItemName)</h5>
                <p class="card-text"> @Html.DisplayFor(modelItem => item.itemName.ItemName)</p>
                <p class="card-text">Price:    @Html.DisplayNameFor(model => model.ItemPrice)</p>

                <a href="#" class="btn btn-primary">Go somewhere</a>
              
                @Html.ActionLink("Edit", "Edit", new { id = item.Id })
                @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.Id })

            </div>
        </div>


    }

</table>
